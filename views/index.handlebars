<h1>Eat-Da-Burger!</h1>

<h3>Make a Burger</h3>
<!-- Create burger -->


<div id="create-burger">
    <label for="addBurger">Burger Name</label>
    <input type="text" id="addBurger" name="name">
    <button type="submit" id="submitBurger">Add Burger</button>
</div>


<h2>All Burgers</h2>
<ul>
  {{#each burgers}}
  	<li>
  	   <p>ID: {{this.id}}</p>
       <p>Burger: {{this.burger_name}}</p>
          <!-- Devour Burger -->
          <div id="allBurgers">
              <button type="button" id="devourBtn">Devour</button>
          </div>
  	</li>
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
  	<li>
  	   <p>ID: {{this.id}}</p>
       <p>Burger: {{this.burger_name}}</p>
  	</li>
    {{/if}}
  {{/each}}
</ul>
